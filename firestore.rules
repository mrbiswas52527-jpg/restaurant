rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // This rule allows any authenticated user (customer or staff) to read and write
    // to the public collections (menuItems and orders) in the /artifacts/{appId}/public/data path.
    match /artifacts/{appId}/public/data/{collectionId}/{documentId} {
      allow read, write: if request.auth != null;
    }
  }
}
